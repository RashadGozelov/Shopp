@model About
@{
    ViewData["Title"] = "Detail";
}

<div class="container-fluid">
    <div class="row">
        <div class="col-12">
            <h3>@Html.Raw(Model.Title)</h3>
            <p>@Html.Raw(Model.Description)</p>
            <img src="~/img/@Model.Image" width="220px" />
        </div>
    </div>
    <div class="row mt-5">
        <div class="col-12">
            <a asp-action="Index" class="btn btn-outline-info"><span class="fa fa-arrow-left"></span></a>
        </div>
    </div>
</div>

