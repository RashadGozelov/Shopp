@model IEnumerable<Parallax>
@{
    ViewData["Title"] = "Index";
}

<div class="container-fluid">
    <div class="row">
        <div class="col-md-12">
            <div class="card">
                <div class="card-header card-header-rose card-header-icon">
                </div>
                <div class="offset-md-10 col-md-2 col-sm-5">
                    @foreach (var paralla in Model)
                    {
                        <a asp-action="Update" asp-route-id="@paralla.Id" class="btn btn-warning" title="Yenilə" style="padding-left: 40px;margin-left: 12px;width: 117px;">
                            <i class="fas fa-edit" style="font-size: 22px;"></i>
                        </a>
                    }
                    </div>
                <div class="card-body">
                    <div class="table-responsive">
                        <table class="table">
                            <thead>
                                <tr>
                                    <th class="text-center">№</th>
                                    <th>Image</th>
                                    <th>Title</th>
                                    <th>Description</th>
                                    <th></th>
                                </tr>
                            </thead>
                            <tbody>
                                @{
                                    int count = 0;

                                }

                                @foreach (var parallax in Model)
                                {
                                    count++;
                                <tr>
                                    <td class="text-center">@count</td>
                                    <td>
                                        <img src="~/img/@parallax.Image" width="200px" height="120px" />
                                    </td>
                                    <td>
                                        @if (parallax.Title1.Length > 30)
                                        {
                                            @Html.Raw(parallax.Title1.Substring(0, 30) + "...")
                                        }
                                        else
                                        {
                                            @Html.Raw(parallax.Title1)
                                        }
                                    </td>
                                    <td>
                                        @if (parallax.Title2.Length > 30)
                                        {
                                            @Html.Raw(parallax.Title2.Substring(0, 30) + "...")
                                        }
                                        else
                                        {
                                            @Html.Raw(parallax.Title2)
                                        }
                                    </td>
                                    <td class="td-actions text-right">
                                        <a asp-action="Detail" asp-route-id="@parallax.Id" class="btn btn-success" title="Bax">
                                            <i class="fas fa-info" style="font-size: 17px;"></i>
                                        </a>
                                    </td>
                                </tr>
                                }
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

