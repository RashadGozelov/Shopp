@model IEnumerable<Category>
@{
    ViewData["Title"] = "Index";
}

<div class="container-fluid">
    <div class="row">
        <div class="col-md-12">
            <div class="card">
                <div class="offset-md-10 col-md-2 col-sm-5">
                    <a asp-action="Create" class="btn btn-info" title="Yarat" style="padding-left: 40px;margin-left: 12px;width: 117px;">
                        <i class="fas fa-pencil-alt" style="font-size: 22px;"></i>
                    </a>
                </div>
                <div class="card-body">
                    <div class="toolbar">
                        <!--        Here you can write extra buttons/actions for the toolbar              -->
                    </div>
                    <div class="material-datatables">
                        <table id="datatables" class="table table-striped table-no-bordered table-hover" cellspacing="0" width="100%" style="width:100%">
                            <thead>
                                <tr>
                                    <th>№</th>
                                    <th></th>
                                    <th>Name</th>
                                    <th></th>
                                    <th class="disabled-sorting text-right"></th>
                                </tr>
                            </thead>
                            <tbody>
                                @{
                                    int count = 0;

                                }

                                @foreach (var category in Model)
                                {
                                    count++;
                                    <tr>
                                        <td class="text-center">@count</td>
                                        <td></td>
                                        <td>@category.Name</td>
                                        <td></td>
                                        <td class="td-actions text-right">
                                            <a asp-action="Detail" asp-route-id="@category.Id" class="btn btn-success" title="Bax">
                                                <i class="fas fa-info" style="font-size: 17px;"></i>
                                            </a>
                                            <a asp-action="Delete" asp-route-id="@category.Id" class="btn btn-danger" title="Sil">
                                                <i class="fas fa-times" style="font-size: 17px;"></i>
                                            </a>
                                        </td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                    </div>
                </div>
                <!-- end content-->
            </div>
            <!--  end card  -->
        </div>
        <!-- end col-md-12 -->
    </div>
    <!-- end row -->
</div>

