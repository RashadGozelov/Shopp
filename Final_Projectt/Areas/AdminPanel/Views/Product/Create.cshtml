@model ProductViewModel
@{
    ViewData["Title"] = "Create";
}

<div class="container-fluid">
    <div class="row">
        <div class="col-12">
            <form method="post" enctype="multipart/form-data">
                <div class="row">
                    <div class="col-6">
                        <div class="row">
                            <div class="form-group" style="padding-bottom: 70px;padding-left: 57px;">
                                <select class="selectpicker" data-size="7" data-style="btn btn-primary btn-round" title="Kateqoriya">
                                    @foreach (var ctg in Model.Categories)
                                    {
                                        <option value="@ctg.Id">@ctg.Name</option>
                                    }
                                </select>
                              
                            </div>
                        </div>
                        <div class="row">
                            <div class="form-group" style="padding-bottom: 70px;padding-left: 57px;">
                                <select class="selectpicker" data-size="7" data-style="btn btn-primary btn-round" title="Marka">
                                    @foreach (var mrk in Model.Markas)
                                    {
                                        <option value="@mrk.Id">@mrk.Name</option>
                                    }
                                </select>
                            
                            </div>
                        </div>
                        <div class="row">
                            <div class="form-group">
                                <div class="fileinput fileinput-new text-center" data-provides="fileinput">
                                    <label asp-for="@Model.ProductImages.FirstOrDefault().Photo">Photo:</label>
                                    <div class="fileinput-new thumbnail">
                                        <img src="~/admin/assets/img/image_placeholder.jpg" alt="...">
                                    </div>
                                    <div class="fileinput-preview fileinput-exists thumbnail"></div>
                                    <div>
                                        <span class="btn btn-rose btn-round btn-file" style="margin-left: 38px;">
                                            <span class="fileinput-new">Şəkil seç</span>
                                            <span class="fileinput-exists">Dəyiş</span>
                                            <input asp-for="@Model.ProductImages.FirstOrDefault().Photo" accept="image/*" multiple="multiple" style="z-index:0;" />
                                        </span>
                                        <a href="#pablo" class="btn btn-danger btn-round fileinput-exists" data-dismiss="fileinput"> Sil</a>
                                    </div>
                                    <span asp-validation-for="@Model.ProductImages.FirstOrDefault().Photo" class="text-danger" style="margin-left: 37px"></span>
                                </div>
                            </div>
                        </div>
                    </div>
                    <div class="col-6">
                        <div class="form-group">
                            <label asp-for="@Model.Product.Name" style="margin-top: -23px;font-size: 16px;color:black;">Name:</label>
                            <textarea asp-for="@Model.Product.Name" class="form-control" style="font-size: 21px;"></textarea>
                            <span asp-validation-for="@Model.Product.Name" class="text-danger"></span>
                        </div>
                        <div class="form-group" style="margin-top:55px">
                            <label asp-for="@Model.Product.Description" style="margin-top: -23px;font-size: 16px;color:black;">Description:</label>
                            <textarea asp-for="@Model.Product.Description" class="form-control" style="font-size: 21px;"></textarea>
                            <span asp-validation-for="@Model.Product.Description" class="text-danger"></span>
                        </div>
                        <div class="form-group" style="margin-top:55px">
                            <label asp-for="@Model.Product.Price"style="margin-top: -23px;font-size: 16px;color:black;">Price:</label>
                            <input asp-for="@Model.Product.Price" min="0" max="10000" class="form-control" style="width:50px;" type="number"/>
                            <span asp-validation-for="@Model.Product.Price" class="text-danger"></span>
                        </div>
                        <div class="form-group" style="margin-top:55px">
                            <label asp-for="@Model.Product.Discount"  style="margin-top: -23px;font-size: 16px;color:black;">Sale:</label>
                            <input asp-for="@Model.Product.Discount" min="0" max="99" class="form-control" style="width:50px;" type="number"/>
                            <span asp-validation-for="@Model.Product.Discount" class="text-danger"></span>
                        </div>
                        <div class="form-group" style="margin-top:55px">
                            <label asp-for="@Model.Product.Count" style="m argin-top: -23px;font-size: 16px;color:black;">Count:</label>
                            <input asp-for="@Model.Product.Count" class="form-control" style="width:50px;" type="number" />
                            <span asp-validation-for="@Model.Product.Count" class="text-danger"></span>
                        </div>
                    </div>
                </div>
            
                    <input type="submit" class="btn btn-info" value="Create" />

          </form>
        </div>
    </div>
    <div class="row">
        <div class="col-12">
            <a asp-action="Index"><i class="fas fa-arrow-left"></i> Go Back</a>
        </div>
    </div>
</div>
<script src="https://cdn.ckeditor.com/ckeditor5/15.0.0/classic/ckeditor.js"></script>
<script>
        ClassicEditor
            .create(document.querySelector('#Product_Name'))
            .catch(error => {
                console.error(error);
        });
    ClassicEditor
        .create(document.querySelector('#Product_Description'))
        .catch(error => {
            console.error(error);
        });
</script>

