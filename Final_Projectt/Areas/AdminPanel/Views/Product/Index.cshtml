@model IEnumerable<Product>
@{
    ViewData["Title"] = "Index";
}

<div class="container-fluid">
    <div class="row">
        <div class="col-md-12">
            <div class="card">
                <div class="offset-md-10 col-md-2 col-sm-5">
                    <a asp-controller="Product" asp-action="Create" class="btn btn-info" title="Yarat" style="padding-left: 40px;margin-left: 12px;width: 117px;">
                        <i class="fas fa-pencil-alt" style="font-size: 22px;"></i>
                    </a>
                </div>
                <div class="card-body" style="overflow-x:scroll;">
                    <div class="toolbar">
                        <!--        Here you can write extra buttons/actions for the toolbar              -->
                    </div>
                    <div class="material-datatables" style="width:1400px;">
                        <table id="datatables" class="table table-striped table-no-bordered table-hover" cellspacing="0" width="100%" style="width:100%">
                            <thead>
                                <tr>
                                    <th>№</th>
                                    <th>Image</th>
                                    <th>Name</th>
                                    <th>Description</th>
                                    <th>Price</th>
                                    <th>Discount</th>
                                    <th>Count</th>
                                    <th>Date</th>
                                    <th class="disabled-sorting text-right"></th>
                                </tr>
                            </thead>
                            <tbody>
                                @{
                                    int count = 0;
                                }
                                @foreach (var product in Model)
                                {
                                    count++;
                                    <tr>
                                        <td>@count</td>
                                        <td>
                                            <img src="~/img/@product.ProductImages.FirstOrDefault()?.Image" style="width:150px" />
                                        </td>
                                        <td>
                                            @if (product.Name.Length > 30)
                                            {
                                                @Html.Raw(product.Name.Substring(0, 30) + "...")
                                            }
                                            else
                                            {
                                                @Html.Raw(product.Name)
                                            }
                                        </td>
                                        <td>
                                            @if (product.Description.Length > 30)
                                            {
                                                @Html.Raw(product.Description.Substring(0, 30) + "...")
                                            }
                                            else
                                            {
                                                @Html.Raw(product.Description)
                                            }
                                        </td>
                                        <td>
                                            @if (product.Discount != null && product.Discount.Value != 0)
                                            {
                                                <span>
                                                    @(product.Price - (product.Price * product.Discount) / 100) ₼
                                                </span>
                                            }
                                            else
                                            {
                                                <span>@product.Price ₼</span>
                                            }
                                      
                                        </td>
                                        <td>@product.Discount</td>
                                        <td>@product.Count</td>
                                        <td>@product.Date</td>
                                        <td class="text-right td-actions">
                                            <a asp-action="Detail" asp-route-id="@product.Id" class="btn btn-success" title="Bax">
                                                <i class="fas fa-info" style="font-size: 17px;"></i>
                                            </a>
                                            <a asp-action="Update" asp-route-id="@product.Id" class="btn btn-warning" title="Yenilə">
                                                <i class="fas fa-edit" style="font-size: 17px;"></i>
                                            </a>
                                            <a asp-action="Delete" asp-route-id="@product.Id" class="btn btn-danger" title="Sil">
                                                <i class="fas fa-times" style="font-size: 17px;"></i>
                                            </a>
                                        </td>
                                    </tr>
                                }

                            </tbody>
                        </table>
                    </div>
                </div>
                <!-- end content-->
            </div>
            <!--  end card  -->
        </div>
        <!-- end col-md-12 -->
    </div>
    <!-- end row -->
</div>

