@model Marka
@{
    ViewData["Title"] = "Delete";
}

<div class="container-fluid">
    <div class="row">
        <div class="col-12">
            <h1>@Model.Name</h1>
        </div>
    </div>
    <div class="row mt-5">
        <div class="col-12">
            <form method="post">
                <p class="text-danger">Are you sure this delete</p>
