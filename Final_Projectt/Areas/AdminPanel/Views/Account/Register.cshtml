@model RegisterViewModel
@{
    Layout = null;
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta http-equiv="content-type" content="text/html;charset=utf-8" />
    <meta charset="utf-8" />
    <link rel="apple-touch-icon" sizes="76x76" href="~/admin/assets/img/apple-icon.png">
    <link rel="icon" type="image/png" href="~/admin/assets/img/favicon.png">
    <meta http-equiv="X-UA-Compatible" content="IE=edge,chrome=1" />
    <title>@ViewBag.Title</title>
    <meta content='width=device-width, initial-scale=1.0, maximum-scale=1.0, user-scalable=0, shrink-to-fit=no' name='viewport' />
    <link rel="stylesheet" type="text/css" href="https://fonts.googleapis.com/css?family=Roboto:300,400,500,700|Roboto+Slab:400,700|Material+Icons" />
    <link rel="stylesheet" href="~/admin/assets/font-awesome/latest/css/font-awesome.min.css">
    <link href="~/admin/assets/css/material-dashboard.minf066.css?v=2.1.0" rel="stylesheet" />
    <link href="~/admin/assets/demo/demo.css" rel="stylesheet" />
    <script src="https://kit.fontawesome.com/8ee7bee6cf.js"></script>
    <style>
        .p-icon-password{
            position:relative;
        }
        .p-icon-password-eye {
            position: absolute;
            top: 10px;
            right: 10px;
            font-size: 20px;
            color: #343a40;
            cursor: pointer;
        }
        #showpw{
            width:363px;
        }
        #showpww {
            width: 363px;
        }
        .picture-container {
            position: relative;
            cursor: pointer;
            text-align: center;
        }
        .picture {
            width: 106px;
            height: 106px;
            background-color: #999;
            border: 4px solid #ccc;
            color: #fff;
            border-radius: 50%;
            margin: 5px auto;
            overflow: hidden;
            transition: all .2s;
            -webkit-transition: all .2s;
        }
        .picture-src{
            width:100%;
        }
        .picture-container input {
            cursor: pointer;
            display: block;
            height: 100%;
            left: 0;
            opacity: 0 !important;
            position: absolute;
            top: 0;
            width: 100%;
        }
        .description {
            color: #999;
            font-size: 14px;
        }
    </style>
</head>

<body class="off-canvas-sidebar">
    <!-- Navbar -->
    <nav class="navbar navbar-expand-lg navbar-transparent navbar-absolute fixed-top text-white">
        <div class="container">
            <button class="navbar-toggler" type="button" data-toggle="collapse" aria-controls="navigation-index" aria-expanded="false" aria-label="Toggle navigation">
                <span class="sr-only">Toggle navigation</span>
                <span class="navbar-toggler-icon icon-bar"></span>
                <span class="navbar-toggler-icon icon-bar"></span>
                <span class="navbar-toggler-icon icon-bar"></span>
            </button>
            <div class="collapse navbar-collapse justify-content-end">
                <ul class="navbar-nav">
                    <li class="nav-item">
                        <a asp-controller="Account" asp-action="Login" class="nav-link">
                            <i class="material-icons">fingerprint</i> Daxil ol
                        </a>
                    </li>
                </ul>
            </div>
        </div>
    </nav>
    <!-- End Navbar -->
    <div class="wrapper wrapper-full-page">
        <div class="page-header register-page header-filter" filter-color="black">
            <div class="container">
                <div class="row">
                    <div class="col-md-10 ml-auto mr-auto">
                        <div class="card card-signup">
                            <h2 class="card-title text-center">Qeydiyyat</h2>
                            <div class="card-body">
                                <div class="row">
                                    <div class="offset-3 col-md-6 mr-auto">
                                        <form class="form" method="post">
                                            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                                            <div class="form-group has-default">
                                                <div class="input-group">
                                                    <div class="input-group-prepend">
                                                        <span class="input-group-text">
                                                            <i class="material-icons">face</i>
                                                        </span>
                                                    </div>
                                                    <input asp-for="Name" type="text" class="form-control" placeholder="Ad...">
                                                </div>
                                                <span asp-validation-for="Name" class="text-danger" style="padding-left: 55px;"></span>
                                            </div>
                                            <div class="form-group has-default">
                                                <div class="input-group">
                                                    <div class="input-group-prepend">
                                                        <span class="input-group-text">
                                                            <i class="material-icons">face</i>
                                                        </span>
                                                    </div>
                                                    <input asp-for="Surname" type="text" class="form-control" placeholder="Soyad...">
                                                </div>
                                                <span asp-validation-for="Surname" class="text-danger" style="padding-left: 55px;"></span>
                                            </div>
                                            <div class="form-group has-default">
                                                <div class="input-group">
                                                    <div class="input-group-prepend">
                                                        <span class="input-group-text">
                                                            <i class="material-icons">mail</i>
                                                        </span>
                                                    </div>
                                                    <input asp-for="Email" type="text" class="form-control" placeholder="E-poçt...">
                                                </div>
                                                <span asp-validation-for="Email" class="text-danger" style="padding-left: 55px;"></span>
                                            </div>
                                            <div class="form-group has-default">
                                                <div class="input-group">
                                                    <div class="input-group-prepend">
                                                        <span class="input-group-text">
                                                            <i class="material-icons">lock_outline</i>
                                                        </span>
                                                    </div>
                                                    <p class="p-icon-password">
                                                        <input asp-for="Password" type="password" placeholder="Şifrə..." class="form-control" id="showpw">
                                                        <i class="fas fa-eye-slash p-icon-password-eye" onclick="showpw();"></i>
                                                    </p>
                                                </div>
                                                <span asp-validation-for="Password" class="text-danger" style="padding-left: 55px;"></span>
                                            </div>
                                            <div class="form-group has-default">
                                                <div class="input-group">
                                                    <div class="input-group-prepend">
                                                        <span class="input-group-text">
                                                            <i class="material-icons">lock_outline</i>
                                                        </span>
                                                    </div>
                                                    <p class="p-icon-password">
                                                        <input asp-for="ConfirmPassword" type="password" placeholder="Təkrar şifrə..." class="form-control" id="showpww">
                                                        <i class="fas fa-eye-slash p-icon-password-eye" onclick="showpww();"></i>
                                                    </p>
                                                </div>
                                                <span asp-validation-for="ConfirmPassword" class="text-danger" style="padding-left: 55px;"></span>
                                            </div>
                                            <div class="text-center">
                                                <button class="btn btn-success btn-round mt-4">Qeydiyyat</button>
                                            </div>
                                        </form>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <script src="~/admin/assets/js/core/jquery.min.js"></script>
    <script src="~/admin/assets/js/core/popper.min.js"></script>
    <script src="~/admin/assets/js/core/bootstrap-material-design.min.js"></script>
    <script src="~/admin/assets/js/plugins/perfect-scrollbar.jquery.min.js"></script>
    <script async defer src="~/admin/assets/buttons.github.io/buttons.js"></script>
    <script src="~/admin/assets/js/plugins/chartist.min.js"></script>
    <script src="~/admin/assets/js/plugins/bootstrap-notify.js"></script>
    <script src="~/admin/assets/js/material-dashboard.minf066.js?v=2.1.0" type="text/javascript"></script>
    <script src="~/admin/assets/demo/demo.js"></script>
    <script>
        function showpw() {
            var pw = document.getElementById('showpw');
            if (pw.type == "text")
                pw.type = "password";
            else
                pw.type = "text";
        }
        function showpww() {
            var pww = document.getElementById('showpww');
            if (pww.type == "text")
                pww.type = "password";
            else
                pww.type = "text";
        }
    </script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/jquery-validate/1.19.1/jquery.validate.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/jquery-validation-unobtrusive/3.2.11/jquery.validate.unobtrusive.min.js"></script>
</body>
</html>
