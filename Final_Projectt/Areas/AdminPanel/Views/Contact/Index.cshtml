@model IEnumerable<Contact>
@{
    ViewData["Title"] = "Index";
}

<style>
    p {
        margin-bottom: 0rem;
    }
</style>

<div class="container-fluid">
    <div class="row">
        <div class="col-md-12">
            <div class="card">
                <div class="card-header card-header-rose card-header-icon">
                </div>
                <div class="offset-md-10 col-md-2 col-sm-5">
                    @foreach (var contact in Model)
                    {
                        <a asp-action="Update" asp-route-id="@contact.Id" class="btn btn-warning" title="Yenilə" style="padding-left: 40px;margin-left: 12px;width: 117px;">
                            <i class="fas fa-edit" style="font-size: 22px;"></i>
                        </a>
                    }
                </div>
                <div class="card-body">
                    <div class="table-responsive">
                        <table class="table">
                            <thead>
                                <tr>
                                    <th class="text-center">№</th>
                                    <th>Address</th>
                                    <th>Mail</th>
                                    <th>Phone</th>
                                    <th></th>
                                </tr>
                            </thead>
                            <tbody>
                                @{
                                    int count = 0;

                                }

                                @foreach (var contact in Model)
                                {
                                    count++;
                                <tr>
                                    <td class="text-center">@count</td>
                                    <td>
                                        @if (contact.Address.Length > 30)
                                        {
                                            @Html.Raw(contact.Address.Substring(0, 30) + "...")
                                        }
                                        else
                                        {
                                            @Html.Raw(contact.Address)
                                        }
                                    </td>
                                    <td>
                                        @if (contact.Mail.Length > 30)
                                        {
                                            @Html.Raw(contact.Mail.Substring(0, 30) + "...")
                                        }
                                        else
                                        {
                                            @Html.Raw(contact.Mail)
                                        }
                                    </td>
                                    <td>
                                        @if (contact.Phone.Length > 30)
                                        {
                                            @Html.Raw(contact.Phone.Substring(0, 30) + "...")
                                        }
                                        else
                                        {
                                            @Html.Raw(contact.Phone)
                                        }
                                    </td>
                                    <td class="text-right td-actions">
                                        <a asp-action="Detail" asp-route-id="@contact.Id" class="btn btn-success" title="Bax">
                                            <i class="fas fa-info" style="font-size: 17px;"></i>
                                        </a>
                                     </td>
                                </tr>
                                }
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

