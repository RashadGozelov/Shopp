@model HomeModel
@{
    ViewData["Title"] = "Haqqımızda";
}

<!-- breadcrumb-area start -->
<div class="breadcrumb-area">
    <div class="container">
        <div class="row">
            <div class="col-lg-12">
                <ul class="breadcrumb-list">
                    <li class="breadcrumb-item"><a asp-controller="Home" asp-action="Index">Əsas səhifə</a></li>
                    <li class="breadcrumb-item active"><i class="fas fa-chevron-right"></i> Haqqımızda</li>
                </ul>
            </div>
        </div>
    </div>
</div>
<!-- breadcrumb-area end -->
<!-- content-wraper start -->
<div class="content-wraper mt-60 pb-60">
    <div class="container">
        <div class="row">
            <div class="col-lg-6">
                <div class="about-us-img">
                    <img src="~/img/@Html.Raw(Model.Abouts.ElementAt(0).Image)" alt="">
                </div>
            </div>
            <div class="col-lg-6">
                <div class="about-info-wrapper">
                    <h2>@Html.Raw(Model.Abouts.ElementAt(0).Title)</h2>
                    <span class="about-p">@Html.Raw(Model.Abouts.ElementAt(0).Description)</span>

                </div>
            </div>
        </div>
    </div>
</div>

