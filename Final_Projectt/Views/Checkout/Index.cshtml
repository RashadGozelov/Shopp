@model LoginViewModel
@{
    ViewData["Title"] = "Index";
}

<!-- breadcrumb-area start -->
<div class="breadcrumb-area">
    <div class="container">
        <div class="row">
            <div class="col-lg-12">
                <ul class="breadcrumb-list">
                    <li class="breadcrumb-item"><a asp-controller="Home" asp-action="Index">Əsas səhifə</a></li>
                    <li class="breadcrumb-item active"><i class="fas fa-chevron-right"></i> Sifariş</li>
                </ul>
            </div>
        </div>
    </div>
</div>
<!-- breadcrumb-area end -->
<!-- content-wraper start -->
<div class="content-wraper bg-gray">
    <div class="container">
        <div class="row">
            <div class="col-lg-12">
                <!-- coupon-area start -->
                <div class="coupon-area">
                    <div class="coupon-accordion">
                        @if (!User.Identity.IsAuthenticated)
                        {
                        <h3>
                            <span id="showlogin" class="coupon">
                                Giriş üçün buraya vurun
                            </span>
                        </h3>
                        <div id="checkout-login" class="coupon-content">
                            <div class="coupon-info">
                                    <form method="post">
                                        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                                        <p class="coupon-input form-row-first">
                                            <label asp-for="Email">E-poçt <span class="required">*</span></label>
                                            <input asp-for="Email" class="form-control">
                                            <span asp-validation-for="Email" class="text-danger"></span>
                                        </p>
                                        <p class="coupon-input form-row-last">
                                            <label asp-for="Password">Şifrə <span class="required">*</span></label>
                                            <input asp-for="Password" class="form-control">
                                            <span asp-validation-for="Password" class="text-danger"></span>
                                        </p>
                                        <div class="clear"></div>
                                        <p>
                                            @*<button value="Login" name="login" class="button-login" type="submit">Daxil ol</button>*@
                                            <input class="btn btn-success" type="submit" value="Daxil ol" asp-controller="Account" asp-action="Login"/>
                                         
                                        </p>
                                    </form>
                            </div>
                        </div>
                        }
                    </div>
                </div>
                <!-- coupon-area end -->
            </div>
        </div>
        <!-- checkout-area start -->
        @if (User.Identity.IsAuthenticated)
        {
            <div class="checkout-area">
                <div class="row">
                    <div class="col-lg-12">
                        <div class="row">
                            <div class="col-lg-6 col-sm-12">
                                <form action="#">
                                    <div class="checkbox-form">
                                        <h3 class="shoping-checkboxt-title">Sifarişi tamamlayın</h3>
                                        <div class="row">
                                            <div class="col-lg-12">
                                                <p class="single-form-row">
                                                    <label>Ad <span class="required">*</span></label>
                                                    <input type="text" name="First name">
                                                </p>
                                            </div>
                                            <div class="col-lg-12">
                                                <p class="single-form-row">
                                                    <label>Soyad <span class="required">*</span></label>
                                                    <input type="text" name="email">
                                                </p>
                                            </div>
                                            <div class="col-lg-12">
                                                <p class="single-form-row">
                                                    <label>Ünvan <span class="required">*</span></label>
                                                    <input type="text" name="address">
                                                </p>
                                            </div>
                                            <div class="col-lg-12">
                                                <p class="single-form-row">
                                                    <label>Telefon <span class="required">*</span></label>
                                                    <input type="text" name="address">
                                                </p>
                                            </div>
                                            <div class="col-lg-12">
                                                <p class="single-form-row">
                                                    <label>E-poçt <span class="required">*</span></label>
                                                    <input type="text" name="Email address ">
                                                </p>
                                            </div>
                                        </div>
                                    </div>
                                </form>
                            </div>
                            <div class="col-lg-6 col-sm-12">
                                <form action="#">
                                    <div class="checkbox-form">
                                        <h3 class="shoping-checkboxt-title">Kart məlumatları</h3>
                                        <div class="row">
                                            <div class="col-lg-12">
                                                <p class="single-form-row">
                                                    <label>Kartın nömrəsi <span class="required">*</span></label>
                                                    <input type="text" name="number">
                                                </p>
                                            </div>
                                            <div class="col-lg-12">
                                                <p class="single-form-row">
                                                    <label>Kartın verilmə tarixi <span class="required">*</span></label>
                                                    <input type="date" name="date">
                                                </p>
                                            </div>
                                            <div class="col-lg-12">
                                                <p class="single-form-row">
                                                    <label>Kartın bitmə tarixi <span class="required">*</span></label>
                                                    <input type="date" name="date">
                                                </p>
                                            </div>
                                            <div class="checkout-payment" style="margin-left: 19px;">
                                                <button class="button-continue-payment" type="submit">Sifarişi tamamla</button>
                                            </div>
                                        </div>
                                    </div>
                                </form>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        }
        else
        {
            <div class="checkout-area">
            </div>
        }
        <!-- checkout-area end -->
    </div>
</div>
<!-- content-wraper end -->
