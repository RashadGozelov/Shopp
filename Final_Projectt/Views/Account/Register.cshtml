@model RegisterViewModel
@{
    ViewData["Title"] = "Qeydiyyat";
}

<div class="content-wraper login-register-area">
    <div class="container">
        <div class="row justify-content-center">
            <div class="col-lg-6  col-md-6 col-sm-12">
                <div class="customer-login-register">
                    <h3>Qeydiyyat</h3>
                    <div class="login-Register-info">
                        <form method="post">
                            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                            <p class="coupon-input form-row-last">
                                <label asp-for="Name">Ad <span class="required">*</span></label>
                                <input asp-for="Name" autocomplete="off" class="form-control">
                                <span asp-validation-for="Name" class="text-danger"></span>
                            </p>
                            <p class="coupon-input form-row-last">
                                <label asp-for="Surname">Soyad <span class="required">*</span></label>
                                <input asp-for="Surname" autocomplete="off" class="form-control">
                                <span asp-validation-for="Surname" class="text-danger"></span>
                            </p>
                            <p class="coupon-input form-row-first">
                                <label asp-for="Email">E-poçt <span class="required">*</span></label>
                                <input asp-for="Email" class="form-control">
                                <span asp-validation-for="Email" class="text-danger"></span>
                            </p>
                            <p class="coupon-input form-row-last">
                                <label asp-for="Password">Şifrə <span class="required">*</span></label>
                                <p class="p-icon-password">
                                    <input asp-for="Password" class="form-control" id="showpw">
                                    <i class="fas fa-eye-slash p-icon-password-eye" onclick="showpw();"></i>
                                </p>
                                <span asp-validation-for="Password" class="text-danger"></span>
                            </p>
                            <p class="coupon-input form-row-last">
                                <label asp-for="ConfirmPassword">Təkrar şifrə <span class="required">*</span></label>
                            <p class="p-icon-confirmpassword">
                                <input asp-for="ConfirmPassword" class="form-control" id="showpww">
                                <i class="fas fa-eye-slash p-icon-confirmpassword-eye" onclick="showpww();"></i>
                            </p>
                                <span asp-validation-for="ConfirmPassword" class="text-danger"></span>
                            </p>
                            <div class="clear"></div>
                            <p>
                                <input class="btn btn-success" type="submit" value="Qeydiyyat">
                            </p>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

