
@{
    ViewData["Title"] = "Hesabım";
}

<!-- breadcrumb-area start -->
<div class="breadcrumb-area">
    <div class="container">
        <div class="row">
            <div class="col-lg-12">
                <ul class="breadcrumb-list">
                    <li class="breadcrumb-item"><a href="index.html">Əsas səhifə</a></li>
                    <li class="breadcrumb-item active"><i class="fas fa-chevron-right"></i> Hesabım</li>
                </ul>
            </div>
        </div>
    </div>
</div>
<!-- breadcrumb-area end -->
<!-- content-wraper start -->
<div class="content-wraper">
    <div class="container">
        <div class="account-dashboard mtb-60">
            <div class="dashboard-upper-info">
                <div class="row align-items-center no-gutters">
                    <div class="col-lg-4 col-md-12">
                        <div class="d-single-info">
                            @if (User.Identity.IsAuthenticated)
                            {
                                <p class="user-name">Salam <span>@User.Identity.Name</span></p>
                            }
                        </div>
                    </div>
                    <div class="col-lg-5 col-md-12">
                        <div class="d-single-info">
                            <p>Sizin məlumatlarınız avtomatik doldurulub, öz sifarişinizi rahat izləyə bilərsiniz.</p>
                        </div>
                    </div>
                    <div class="col-lg-3 col-md-12">
                        <div class="d-single-info text-lg-center">
                            <a class="view-cart" href="cart.html"><i class="fa fa-cart-plus"></i>Səbət</a>
                        </div>
                    </div>
                </div>
            </div>
            <div class="row">
                <div class="col-md-12 col-lg-2">
                    <ul class="nav flex-column dashboard-list" role="tablist">
                        <li> <a class="nav-link" data-toggle="tab" href="#orders">Sifarişlər</a></li>
                        <li><a class="nav-link" data-toggle="tab" href="#address">Ünvan</a></li>
                        <li><a class="nav-link" data-toggle="tab" href="#account-details">Hesab təfərrüatları</a></li>
                        <li><a class="nav-link"  asp-controller="Account" asp-action="Logout">Çıxış</a></li>
                    </ul>
                </div>
                <div class="col-md-12 col-lg-10">
                    <div class="tab-content dashboard-content">
                        <div id="orders" class="tab-pane fade">
                            <h3>Sifarişlər</h3>
                            <div class="table-responsive">
                                <table class="table">
                                    <thead>
                                        <tr>
                                            <th>Sifariş</th>
                                            <th>Tarix</th>
                                            <th>Toplam</th>
                                            <th>Fəaliyyət</th>
                                        </tr>
                                    </thead>
                                    <tbody>
                                        <tr>
                                            <td>1</td>
                                            <td>May 10, 2018</td>
                                            <td>25.00 Azn 1 məhsul </td>
                                            <td><a class="view" href="cart.html">bax</a></td>
                                        </tr>
                                        <tr>
                                            <td>2</td>
                                            <td>May 10, 2018</td>
                                            <td>35.00 Azn 1 məhsul </td>
                                            <td><a class="view" href="cart.html">bax</a></td>
                                        </tr>
                                    </tbody>
                                </table>
                            </div>
                        </div>
                        <div id="address" class="tab-pane">
                            <p>Aşağıdakı ünvanlar ödəniş səhifəsində standart olaraq istifadə ediləcək.</p>
                            <h4 class="billing-address">Ödəmə ünvanı</h4>
                            <a class="view" href="#">Yeniləyin</a>
                            <p>Ad</p>
                            <p>Şəhər</p>
                        </div>
                        <div id="account-details" class="tab-pane fade">
                            <h3> Hesab təfərrüfatları</h3>
                            <div class="login">
                                <div class="login-form-container">
                                    <div class="account-login-form">
                                        <form action="#">
                                            <label>Ad</label>
                                            <input name="first-name" type="text">
                                            <label>Soyad</label>
                                            <input name="last-name" type="text">
                                            <label>E-poçt</label>
                                            <input name="email-name" type="text">
                                            <label>Şifrə</label>
                                            <input name="user-password" type="password">
                                            <div class="button-box">
                                                <button type="submit" class="default-btn">Yüklə</button>
                                            </div>
                                        </form>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
<!-- content-wraper end -->
