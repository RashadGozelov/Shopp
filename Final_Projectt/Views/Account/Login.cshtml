@model LoginViewModel
@{
    ViewData["Title"] = "Daxil ol";
}

<div class="content-wraper login-register-area">
    <div class="container">
        <div class="row justify-content-center">
            <div class="col-lg-6 col-md-6 col-sm-12">
                <div class="customer-login-register">
                    <h3>Daxil ol</h3>
                    <div class="login-Register-info">
                        <form method="post">
                            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                            <p class="coupon-input form-row-first">
                                <label asp-for="Email">E-poçt <span class="required">*</span></label>
                                <input asp-for="Email" class="form-control">
                                <span asp-validation-for="Email" class="text-danger"></span>
                            </p>
                            <p class="coupon-input form-row-last">
                                <label asp-for="Password">Şifrə <span class="required">*</span></label>
                            <p class="p-icon-password">
                                <input asp-for="Password" class="form-control" id="showpw">
                                <i class="fas fa-eye-slash p-icon-password-eye" onclick="showpw();"></i>
                            </p>
                            <span asp-validation-for="Password" class="text-danger"></span>
                            </p>
                            <div class="clear"></div>
                            <p>
                                <input class="btn btn-success" type="submit" value="Daxil ol">
                                <label asp-for="RememberMe">
                                    <input asp-for="RememberMe">
                                </label><span>  Remember me</span>
                            </p>
                                <a asp-controller="Account" asp-action="ForgotPassword" class="btn btn-link" style="text-decoration:none;padding:0;color:black;">
                                   Şifrəni unutmusunuz?
                                </a>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

